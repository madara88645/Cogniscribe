{
  "name": "voice-paste-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "dev:electron": "wait-on tcp:5173 && npm run build:electron && cross-env ELECTRON_RUN_AS_NODE=0 ELECTRON_START_URL=http://localhost:5173 electron .",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "build": "npm run build:electron && npm run build:renderer",
    "dist:portable": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^32.2.6",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.voicepaste.desktop",
    "productName": "Voice Paste Studio",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**",
      "renderer/dist/**"
    ],
    "extraResources": [
      {
        "from": "../backend_service.py",
        "to": "backend_service.py"
      },
      {
        "from": "../audio_processing.py",
        "to": "audio_processing.py"
      },
      {
        "from": "../config_manager.py",
        "to": "config_manager.py"
      },
      {
        "from": "../stt_service.py",
        "to": "stt_service.py"
      },
      {
        "from": "../config.json",
        "to": "config.json"
      }
    ]
  }
}
